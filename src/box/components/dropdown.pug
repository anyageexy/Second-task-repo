mixin dropdown(head, item_1, item_2, item_3, col_1, col_2, col_3)
  .dropdown-container
    .dropdown-head(onclick='myFunction()')

      .dropdown-head-text
        p.head-text= head 
      .dropdown-head-arrow


    #dropdown-list.dropdown-list 

      .dropdown-list-item-1
        .list-title
          p= item_1
        .list-counter
          .btn-decrement
            span.span-decrement &#8722;
          .label-count
            span.span-count= col_1
          .btn-increment
            span.span-increment &#43;

      .dropdown-list-item-2
        .list-title
          p= item_2
        .list-counter
          .btn-decrement
            span.span-decrement &#8722;
          .label-count
            span.span-count= col_2
          .btn-increment
            span.span-increment &#43;
        
      .dropdown-list-item-3
        .list-title
          p= item_3
        .list-counter
          .btn-decrement
            span.span-decrement &#8722;
          .label-count
            span.span-count= col_3
          .btn-increment
            span.span-increment &#43;